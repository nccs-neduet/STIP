#!/bin/bash
# preinst script for alienvault-agent-pro
#
# see: dh_installdeb(1)
ALIENVAULT_AGENT_PRO_TMP_DIR=/tmp/ossim-agent
set -e

# configuration variables


# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

notify_conffile_changed() {
    local PACKAGE="$1"
    local CONFFILE="$2"
    local TRIGGER="$3"

    md5sum="$(md5sum $CONFFILE 2> /dev/null | sed -e 's/ .*//')"
    old_md5sum="$(dpkg-query -W -f='${Conffiles}' $PACKAGE | sed -n -e "\' $CONFFILE ' { s/ obsolete$//; s/.* //; p }")"
    if [ "$md5sum" != "$old_md5sum" ]
    then
        dpkg-trigger --no-await $TRIGGER
    fi
}

if ! getent group alienvault > /dev/null; then
	addgroup --quiet --system alienvault
fi
if ! getent passwd avagent > /dev/null; then
	adduser  --system --ingroup alienvault --gecos "AlienVault Agent" --no-create-home avagent
fi


# environment configuration
if [ ! -d ${ALIENVAULT_AGENT_PRO_TMP_DIR} ]; then
  mkdir -p ${ALIENVAULT_AGENT_PRO_TMP_DIR}
fi

[ -d /var/log/alienvault ] || mkdir -p -m 0770 /var/log/alienvault
chgrp alienvault /var/log/alienvault -R

[ -d /var/log/alienvault/agent ] || mkdir -p -m 0750 /var/log/alienvault/agent
chgrp alienvault /var/log/alienvault/agent -R

case "$1" in
    install|upgrade)
        # Clean up .py[co]
        find /usr/share/alienvault/ossim-agent/ -name "*.py[co]" -exec rm -f {} \; || true

        if [ -f /etc/ossim/agent/config.cfg ]; then
            dpkg-divert --add /etc/ossim/agent/config.cfg
        fi

        if [ -f /etc/iptables/rules010-agent.iptables ]; then
            dpkg-divert --add /etc/iptables/rules010-agent.iptables
        fi

        notify_conffile_changed "ossim-agent" "/etc/iptables/rules010-agent.iptables" "alienvault-restart-firewall"
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


